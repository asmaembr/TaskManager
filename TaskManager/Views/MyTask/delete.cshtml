@model MyTask

<div class="border p-3 mt-4">
    <div row="row pb-3">
        <h2 class="test-primary">Delete Task</h2>
    </div>
    <div class="mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" disabled />
    </div>
    <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-danger">Delete Task</button>
        <a asp-controller="MyTask" asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
